<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/program_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:text="08:00 - 09:00"
        android:textSize="16sp"
        android:textColor="#787878"/>

    <TextView
        android:id="@+id/program_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/program_time"
        android:text="正在播放"
        android:textSize="12sp"
        android:textColor="#FFDF0B"
        android:layout_toRightOf="@id/program_time"
        android:layout_alignBottom="@id/program_time"
        android:layout_marginLeft="10dp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/program_playingiv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_spectrum"
        android:layout_toRightOf="@id/program_playing"
        android:layout_alignBottom="@id/program_playing"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/program_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="小美告诉你健身的好处"
        android:layout_below="@id/program_time"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="@dimen/text_margin"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="93dp"
        android:src="@drawable/headerbg"
        android:layout_below="@id/program_title"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
